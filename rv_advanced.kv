

BoxLayout:
    orientation: "vertical"
    padding: dp(10)
    spacing: dp(10)

    BoxLayout:
        size_hint_y: None
        height: dp(40)
        spacing: dp(5)

        TextInput:
            id: filter_input
            hint_text: "Filterâ€¦"
            background_color: (0.15, 0.15, 0.15, 1)
            foreground_color: (1, 1, 1, 1)
            on_text: app.filter_items(self.text)

        TextInput:
            id: input
            hint_text: "Add new item"
            background_color: (0.15, 0.15, 0.15, 1)
            foreground_color: (1, 1, 1, 1)

        Button:
            text: "Add"
            size_hint_x: None
            width: dp(80)
            background_color: (0.2, 0.2, 0.2, 1)
            on_press: app.add_item()

    RecycleView:
        viewclass: "ListItem"
        data: [{"text": it} for it in app.data_items]

        RecycleBoxLayout:
            default_size: None, dp(48)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"
            spacing: dp(4)

<ListItem@RecycleDataViewBehavior+BoxLayout>:
    text: ""
    size_hint_y: None
    height: dp(48)
    padding: dp(5)
    spacing: dp(10)

    canvas.before:
        Color:
            rgba: (0.1, 0.1, 0.1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: root.text
        halign: "left"
        valign: "middle"
        text_size: self.size
        color: (1, 1, 1, 1)

    Button:
        text: "Remove"
        size_hint_x: None
        width: dp(80)
        background_color: (0.2, 0.2, 0.2, 1)
        on_press: app.remove_item(root.text)
